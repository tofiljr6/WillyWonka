<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add chocolate</title>
    <link rel='stylesheet' href='/stylesheets/bootstrap.css'/>
    <link rel="stylesheet" href="/stylesheets/style.css"/>
    <script src="/javascripts/setBodyPadding.js"></script>
    <script src="/javascripts/add-chocolate.js"></script>
</head>
<body>
<% include navbar %>
<div class="container form">
    <h1>Add chocolate</h1>
    <div id="messageBox">
    </div>
    <form>
        <fieldset>
            <div class="form-group">
                <label class="col-form-label" for="nameInput">Name</label>
                <input type="text" class="form-control" placeholder="Amarena" id="nameInput" required="required"
                       name="name">
            </div>

            <div class="form-group">
                <label for="producerInput">Producer</label>
                <input type="text" class="form-control" placeholder="Milka" id="producerInput" required="required"
                                       name="name">
            </div>

            <div class="form-group">
                <label class="col-form-label" for="typeSelect">Type of chocolate</label>
                <select class="form-control" id="typeSelect" name="type">
                    <option>bitter</option>
                    <option>milky</option>
                    <option>white</option>
                </select>
            </div>

            <div class="form-group">
                <label for="flavourInput">Flavour</label>
                <input type="text" class="form-control" placeholder="Truskawkowa" id="flavourInput" required="required"
                       name="name">
            </div>

            <div class="form-group">
                <label class="col-form-label" for="massInput">Mass (g)</label>
                <input type="number" step="0.01" min="0" class="form-control" placeholder="400"
                       id="massInput" required="required" name="capacity">
            </div>

            <div class="form-group">
                <label class="col-form-label" for="priceInput">Price</label>
                <input type="number" step="0.01" min="0" class="form-control" placeholder="2.99" id="priceInput"
                       required="required" name="price">
            </div>
            <div class="buttons">
                <button onclick="location.href='/'" type="button" class="btn btn-primary btn-lg ">Back</button>
                <button id="submit" type="button" class="btn btn-primary">Submit</button>
            </div>
        </fieldset>
    </form>
</div>
<% include footer %>
</body>
</html>
